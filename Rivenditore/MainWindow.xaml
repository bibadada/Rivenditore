<Window x:Class="Rivenditore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rivenditore"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="File" >
                <MenuItem Header="Logout"></MenuItem>
            </MenuItem>
            <MenuItem x:Name="MenuItemClienti" Header="Clienti" Click="MenuItemClienti_Click"></MenuItem>
            <MenuItem x:Name="MenuItemOrdini" Header="Ordini" Click="MenuItemOrdini_Click"></MenuItem>
            <MenuItem x:Name="MenuItemArticoli" Header="Articoli" Click="MenuItemArticoli_Click"></MenuItem>
            <MenuItem Header="?"></MenuItem>
        </Menu>
        <Frame x:Name="NavigationFrame" Grid.Row="1" Source="./Views/MainMenu.xaml" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>

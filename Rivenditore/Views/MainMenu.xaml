<Page x:Class="Rivenditore.Views.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rivenditore.Views"
      mc:Ignorable="d" 
      d:DesignHeight="680" d:DesignWidth="1200"
      Title="MainMenu">

    <Grid>
        
        <Grid.ColumnDefinitions>
            
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>

            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Style="{StaticResource TitleLable}" Margin="0 50 0 0">Gestionale Rivenditore</Label>

        <Button Grid.Column="0" Grid.Row="1" Style="{StaticResource MainMenuButton}" Click="Button_Click">Archivio Clienti</Button>
        <Button Grid.Column="1" Grid.Row="1" Style="{StaticResource MainMenuButton}" Click="Button_Click_1">Archivio Ordini</Button>
        <Button Grid.Column="2" Grid.Row="1" Style="{StaticResource MainMenuButton}" Click="Button_Click_2">Archivio Articoli</Button>
        
    </Grid>
</Page>
